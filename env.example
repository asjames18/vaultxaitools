# Server Configuration
PORT=5000
NODE_ENV=development

# Debug Configuration (only set to true in development)
NEXT_PUBLIC_DEBUG=false

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/vaultxaitools

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Optional: Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# SEO and Analytics
GOOGLE_VERIFICATION=your_google_verification_code
YANDEX_VERIFICATION=your_yandex_verification_code
YAHOO_VERIFICATION=your_yahoo_verification_code
GOOGLE_ANALYTICS_ID=your_ga_id_here
GOOGLE_TAG_MANAGER_ID=your_gtm_id_here

# Social Media
TWITTER_HANDLE=@vaultxaitools
LINKEDIN_URL=https://linkedin.com/company/vaultxaitools
GITHUB_URL=https://github.com/vaultxaitools

# Contact Information
CONTACT_EMAIL=contact@vaultxaitools.com
SUPPORT_EMAIL=support@vaultxaitools.com

# API Keys (if needed)
OPENAI_API_KEY=your_openai_key_here
REPLICATE_API_KEY=your_replicate_key_here

# Database Configuration
DATABASE_URL=your_database_url_here

# OAuth Provider Configuration (configure in Supabase Dashboard)
# These are configured in Supabase Dashboard > Authentication > Providers
# No additional environment variables needed for OAuth providers

# News API Configuration (for real-time AI news)
NEXT_PUBLIC_NEWS_API_KEY=your-news-api-key-here 